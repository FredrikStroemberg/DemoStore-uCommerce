@using ClientDependency.Core.Mvc
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;
    Html.RequiresJs("~/scripts/jquery-3.0.0.slim.js", 1);
    Html.RequiresJs("~/scripts/jquery-3.0.0.js", 1);
    Html.RequiresJs("~/scripts/jquery.validate.min.js", 1);
    Html.RequiresJs("~/scripts/tether.min.js", 1);
    Html.RequiresJs("~/scripts/bootstrap.js", 1);
    Html.RequiresJs("~/scripts/uCommerce.jQuery.js", 2);
    Html.RequiresJs("~/scripts/ucommerce.servicestack.js", 2);
    Html.RequiresJs("~/scripts/ucommerce.demostore.js", 2);
    Html.RequiresJs("~/scripts/uCommerce.facets.js");
    Html.RequiresJs("~/scripts/ucommerce.bootstrap.js", 1);
    Html.RequiresJs("~/scripts/uCommerce.demostore.checkout.js", 2);

    Html.RequiresCss("~/css/tether.css", 2);
    Html.RequiresCss("~/css/bootstrap.min.css", 2);
    Html.RequiresCss("~/css/ucommerce.demostore.css", 2);
    Html.RequiresCss("~/css/font-awesome.min.css", 2);

}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <title>Flowers Of Sopra Steria</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    @Html.Raw(Html.RenderCssHere())

    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    @RenderSection("cphHead", false)
    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-XXXXXXXX-x']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
</head>
<body>

    <div class="navbar navbar-fixed-top">
        <div class="container">

            <div class="row">
                <div class="navbar-header">
                    <a class="col-md-3 navbar-brand" href="/">Flowers of Sopra Steria</a>
                </div>

                <form id="search-form" class="pull-xs-left form-inline navbar-form" action="/search">
                    <div class="input-append input-group">
                        <input id="site-search" type="text" name="search" class="form-control" placeholder="Search for flowers" />
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-link btn-search">
                                <i class="fa fa-search" aria-hidden="true"></i>
                            </button>
                        </span>
                    </div>
                </form>

                <div class="pull-xs-right navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            @Umbraco.RenderMacro("uCommerceMiniBasket")
                        </li>
                    </ul>
                </div>

            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-3 col-md-3">
                <div class="well sidebar-nav" id="main-nav">
                    @Umbraco.RenderMacro("uCommerceCategoryNavigation")
                </div>
                <div class="sidebar-nav" id="facets-nav">
                    @Umbraco.RenderMacro("uCommerceFacets")
                </div>
                <div class="well sidebar-nav" id="why-buy">
                    <ol>
                        <li><i class="fa fa-star"></i>5 star satisfaction</li>
                        <li><i class="fa fa-truck"></i>Free delivery</li>
                        <li>
                            Payment Information<br>
                            <img src="/img/ucommerce/cards.png" alt="We accept VISA, SOLO, PayPal, MasterCard" title="We accept VISA, SOLO, PayPal, MasterCard">
                        </li>
                    </ol>
                    <p id="powered-by-ucommerce">
                        <a href="http://ucommerce.dk/" title="The most feature rich e-commerce package for Umbraco" target="_blank"><img src="/img/ucommerce/ucommerce.png" alt="Powered by uCommerce"></a>
                    </p>
                </div>
                <div class="well sidebar-nav" id="about">
                    <h5>Flowers of Sopra Steria</h5>
                    <p>This is an example store where it is possible to shop flowers of all kinds.</p>
                    <p>The products listed are not from existing retailers but all orders will be fulfilled anyways - be aware.</p>
                    <p>
                        <a href="http://ucommerce.dk" class="btn btn-default" title="The most feature rich e-commerce package for Umbraco">Find Out More</a>
                    </p>
                </div>
                <div class="well sidebar-nav" id="about">
                    <h5>Sopra Tipsar:</h5>
                    <p>Christmas is coming - therefore we have some new flower arrangements for you to get in the mood and celebrate.</p>
                    <p class="btn-group view-details">
                        <a href="/demo-store/jul/c-24/c-1089" class="btn btn-default">View Category <span><i class="fa fa-shopping-cart" aria-hidden="true"></i></span></a>
                    </p>
                    
                </div>
                <div class="well sidebar-nav" id="newsletter">
                    <h5>Want to be up-to-date?</h5>
                    <p>...sign up to our newsletter.</p>
                    <form action="http://thesitedoctor.createsend.com/t/y/s/xbjtk/" method="post" class="validate" id="newsletter-form">
                        <div class="input-append input-group">
                            <input type="email" name="cm-xbjtk-xbjtk" id="xbjtk-xbjtk" class="form-control required email">
                            <span class="input-group-btn">
                                <button class="btn btn-secondary btn-nopadding" type="submit">Vamos!</button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-sm-9 col-md-9">
                @Umbraco.RenderMacro("uCommerceBreadcrumbs")
                @RenderBody()
            </div>
        </div>
        <hr>
        <footer>
            <asp:contentplaceholder runat="server" id="cphFoot"></asp:contentplaceholder>
            @RenderSection("cphFoot", false)
            <div class="col-sm-6 col-md-6">
                <p>
                    © <a href="http://www.kentor.se/" title="The best flowershop in the business." target="_blank">Kentor/Sopra Steria</a>
                </p>
            </div>
            <div class="pull-right col-sm-6 col-md-6">
                <p>
                    Store made by <a href="http://www.kentor.se/" title="Kentor/Sopra Steria - Vi Driver Er Digitala Transformation" target="_blank">Kentor/Sopra Steria</a> 2017
                </p>
            </div>
        </footer>
    </div>
    @Html.Raw(Html.RenderJsHere())
</body>
</html>
